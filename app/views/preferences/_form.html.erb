<%= form_for(preference) do |f| %>
  <% if preference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(preference.errors.count, "error") %> prohibited this preference from being saved:</h2>

      <ul>
      <% preference.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :presentation_mode %>
    <%= f.collection_select :presentation_mode, Preference.presentation_modes, :first, :first, {include_blank: true}, {class: 'form-control'} %>
  </div>

  <div class="field">
    <%= f.label :resource_type %>
      <%= f.collection_select :resource_type, Preference.resource_types, :first, :first, {include_blank: true}, {class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
