<div class="x_panel">
  <div class="col-sm-4">
    <h2>Edit Course</h2>
  </div>
  <div class="col-sm-8">
      <%= link_to 'Cancel', courses_path,  :class => "btn btn-default pull-right  "%>
  </div>
  <%= render 'form', course: @course %>
</div>

<div class="x_panel">
  <div class="x_title">
    <div class="col-md-8">
      <h2>Concepts in Course</h2>
    </div>
    <div class="clearfix"></div>
  </div>
  <div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Level</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @course.concepts, concepts:@course.concepts %>
      </tbody>
    </table>
  </div>
</div>


<%= link_to 'Add New Concept', new_course_concept_path(@course), :class=>'btn btn-primary' %>
