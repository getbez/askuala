<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Language</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.language %></td>
        <td><%= link_to 'Show', student %>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>


